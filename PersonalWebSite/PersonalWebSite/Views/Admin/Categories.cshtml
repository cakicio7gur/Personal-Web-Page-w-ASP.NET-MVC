@model PersonalWebSite.Models.Kategori
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
<html>
<body>
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title">New Category</h5>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateAndAddCategory", "Admin", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <form method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Kategori Adı</label>
                                            @Html.TextBoxFor(m => m.kategori1, new { @class = "form-control", MaxLength = 50, MinLenght = 3, required = "required", autofocus = "autofocus" })
                                            @Html.ValidationMessageFor(m => m.kategori1, "", new { @style = "color:red" })
                                        </div>
                                    </div>
                                </div>
                                @Html.HiddenFor(m => m.kategoriID)
                                <div class="row">
                                    <div class="update ml-auto mr-auto">
                                        <button type="submit" class="btn btn-primary btn-round">ADD / UPDATE CATEGORY</button>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
