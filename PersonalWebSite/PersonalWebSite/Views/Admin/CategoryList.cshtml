@using PersonalWebSite.Models
@model List<Kategori>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
<html>
<body>
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Category List</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th>KATEGORİ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.kategori1</td>
                                        <td class="text-right">
                                            <a href="/Admin/GetCategoryDetailByID/@item.kategoriID" class="btn btn-warning">UPDATE</a>
                                            <a href="/Admin/RemoveCategory/@item.kategoriID" class="btn btn-danger">DELETE</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <h5 style="color:red">@ViewBag.KategoriHataMesajı</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

