@using PersonalWebSite.Models
@model List<Uye>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
<html>
<body>
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">User List</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th>ÜYE ADI</th>
                                    <th>KULLANICI ADI</th>
                                    <th>ÜYE TİPİ</th>
                                    <th>E-MAİL</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.adSoyad</td>
                                        <td>@user.UyeDetay.kullaniciAdi</td>
                                        <td>@user.Rol.rol1</td>
                                        <td>@user.UyeDetay.eMail</td>
                                        <td class="text-right">
                                            <a href="/Admin/RemoveUser/@user.uyeID" class="btn btn-danger">DELETE</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>