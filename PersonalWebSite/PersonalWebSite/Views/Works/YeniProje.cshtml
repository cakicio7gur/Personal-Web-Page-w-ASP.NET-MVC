@{
    ViewBag.Title = "YeniProje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>YeniProje</h2>

<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="img/fav.png">
    <!-- Author Meta -->
    <meta name="author" content="colorlib">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">

    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
</head>
<body>
    <!-- start banner Area -->
    <section class="about-banner">
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        Yeni Proje Ekle
                    </h1>
                    <p class="text-white link-nav"><a href="/Home/Index">Ana Sayfa </a><span class="lnr lnr-arrow-right"></span><a>Projelerim</a>  <span class="lnr lnr-arrow-right"></span>  <a> Yeni Proje Ekle</a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->
    <section class="post-content-area single-post-area">
        <div class="container">
            <div class="comment-form">
                <h4>Proje Bilgileri</h4>
                <form class="form-group" method="post">
                    <div class="form-group form-inline">
                        <div class="form-group col-lg-6 col-md-12 name">
                            <input type="text" class="form-control" name="projeBaslik" placeholder="Proje Başlığı" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Proje Başlığı'">
                        </div>
                        <div class="form-group col-lg-6 col-md-12 email">
                            <input type="text" class="form-control" name="projeLink" placeholder="Proje Linki" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Proje Linki'">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="projeResim" placeholder="Proje Resmi" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Proje Resmi'">
                    </div>
                    <button class="primary-btn text-uppercase">KAYDET</button>
                </form>
            </div>
        </div>
    </section>

</body>
</html>