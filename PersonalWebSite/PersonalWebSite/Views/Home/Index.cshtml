
@{
    /*ViewBag.Title = "Index";*/
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="">
    <!-- Author Meta -->
    <meta name="author" content="colorlib">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Personal</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    @Styles.Render("~/bundles/sweetalert/css")
    @Scripts.Render("~/bundles/sweetalert/js")
</head>
<body>
    <!-- start banner Area -->
    <section class="banner-area">
        <div class="container">
            <div class="row fullscreen align-items-center justify-content-between">
                <div class="col-lg-6 col-md-6 banner-left">
                    <h6>MERHABA BEN <b>ÖZGÜR ÇAKICI</b> KİŞİSEL WEB SAYFAMA</h6>
                    <h1>HOŞGELDİNİZ</h1>
                    <a href="https://drive.google.com/file/d/1-ar06U0behspOkbvfd31W55XkxHH-r9k/view?usp=sharing" target="_blank" class="primary-btn text-uppercase">HAKKIMDA DAHA DETAYLI BİLGİ İÇİN CV'ME BURADAN ULAŞABİLİRSİNİZ.</a>
                </div>
                <div style="margin-bottom:90px" class="col-lg-6 col-md-6 banner-right d-flex align-self-end">
                    <img class="img-fluid" src="~/Content/img/home.png">
                </div>
            </div>
        </div>
    </section>
    @if (TempData["GirisBilgisi"] != null)
    {
        <script type="text/javascript">
                window.onload = function () {
                    Swal.fire({
                        position: 'top',
                        type: 'success',
                        title: 'Giriş Başarılı',
                        showConfirmButton: false,
                        timer: 1250
                    })
                };
        </script>
    }
</body>
</html>

